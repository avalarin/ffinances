= ko_template 'select-wallet-template' do
  .av-dropdown
    %a.btn.btn-default(data-toggle="av-dropdown")
      = ko 'if: selected()' do
        %img(data-bind="attr: { src: selected().imageUrl }")
        %span(data-bind="text: selected().displayName")
      = ko 'if: !selected()' do
        %span=t('.select_wallet')
    .av-dropdown-drop
      %input.form-control.search{ type: 'text', placeholder: t('commands.search'), 'data-bind' => 'value: search, valueUpdate: "afterkeydown"' }
      = ko 'if: items().length == 0' do
        %p.fail-message=t('.no_wallets')
      %ul.select-list(data-bind="foreach: items")
        %li
          %a(href="#" data-bind="click: $parent.select")
            %img(data-bind="attr: { src: imageUrl }")
            %span(data-bind="text: displayName")